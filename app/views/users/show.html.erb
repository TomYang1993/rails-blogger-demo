<div class="w-full">
  <h2 class="text-4xl text-center font-extrabold"><%= @user.username %>'s profile</h2>

  <% if logged_in? && current_user == @user %>
    <button type="button" class="bg-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:focus:ring-yellow-900"><%= link_to "edit your profile", edit_user_path %></button>
  <%end %>
  <h3 class="text-4xl text-center font-extrabold">Articles</h3>

  <%= render 'articles/article' %>
</div>